                        android:layout_marginLeft="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/tron_one"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
